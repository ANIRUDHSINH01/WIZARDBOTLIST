<%- include('partials/header') %>

<div class="bg-gray-800 p-4 rounded-lg">
  <h1 class="text-4xl font-bold mb-4"><%= bot.id %></h1>
  <p class="text-gray-400 mb-4"><%= bot.shortDescription %></p>
  <p class="mb-2"><strong>Prefix:</strong> <%= bot.prefix %></p>
  <p class="mb-2"><strong>Owner:</strong> <%= bot.ownerUsername %></p>
  <p class="mb-4"><strong>Votes:</strong> <%= bot.votes %></p>
  <form action="/api/bots/<%= bot.id %>/vote" method="post">
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Vote</button>
  </form>
</div>

<%- include('partials/footer') %>
