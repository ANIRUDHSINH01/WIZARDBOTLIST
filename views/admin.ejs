<%- include('partials/header') %>

<h1 class="text-4xl font-bold mb-4">Admin Panel</h1>

<h2 class="text-2xl font-bold mb-4">Pending Bots</h2>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% bots.forEach(bot => { %>
    <div class="bg-gray-800 p-4 rounded-lg">
      <h2 class="text-2xl font-bold"><%= bot.id %></h2>
      <p class="text-gray-400"><%= bot.shortDescription %></p>
      <div class="mt-4">
        <form action="/api/admin/<%= bot.id %>/approve" method="post" class="inline-block">
          <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Approve</button>
        </form>
        <form action="/api/admin/<%= bot.id %>/reject" method="post" class="inline-block">
          <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Reject</button>
        </form>
      </div>
    </div>
  <% }); %>
</div>

<%- include('partials/footer') %>
