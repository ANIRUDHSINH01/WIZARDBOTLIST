<%- include('partials/header') %>

<h1 class="text-4xl font-bold mb-4">Bots</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% bots.forEach(bot => { %>
    <div class="bg-gray-800 p-4 rounded-lg">
      <h2 class="text-2xl font-bold"><a href="/bots/<%= bot.id %>"><%= bot.id %></a></h2>
      <p class="text-gray-400"><%= bot.shortDescription %></p>
    </div>
  <% }); %>
</div>

<%- include('partials/footer') %>
